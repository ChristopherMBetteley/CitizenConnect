@model IEnumerable<CitizenConnect.Models.ProjectView>

    ViewBag.Title = "Index";
}

<h2>Community Projects</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    <div class="col-sm-12 col-md-12">
        <div class="thumbnail">
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.ProjectName)</h3>
                    @Html.ActionLink("Details", "Details", new { id = item.ProjectID }) |
                
                <h3>@Html.DisplayNameFor(model => model.ApplicationUser)</h3>
                <p>
                   @Html.DisplayFor(modelItem => item.ApplicationUser.userFirstName)
                   @Html.DisplayFor(modelItem => item.ApplicationUser.userLastName)
                </p>
                <h3>@Html.DisplayNameFor(model => model.InterestedVolunteers)</h3>
                <p>
                    @Html.DisplayFor(modelItem => item.InterestedVolunteers)
                </p>
               </div>
        </div>
    </div>

}
